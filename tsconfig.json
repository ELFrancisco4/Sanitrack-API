{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck":true
  },
  "include": [
    "src/**/*",
  ],
  "execMap": {
    "ts": "ts-node"
  }
}
